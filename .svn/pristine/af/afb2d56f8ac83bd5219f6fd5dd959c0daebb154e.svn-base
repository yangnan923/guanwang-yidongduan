.mosowe-swiper {
  width: 100%;
  position: relative;
}
.mosowe-swiper .uni-swiper {
  height: inherit;
}
.mosowe-swiper .uni-swiper .uni-swiper-dot {
  width: 20px !important;
  height: 8px !important;
  border-radius: 4px;
}
.mosowe-swiper .uni-swiper .item {
  box-sizing: border-box;
}
.mosowe-swiper .uni-swiper .item .image {
  width: 100%;
  height: 100%;
}
.mosowe-swiper .uni-swiper .item.swiper-pyramid {
  padding: 30rpx;
}
.mosowe-swiper .uni-swiper .item.swiper-prev {
  -webkit-animation: prev .5s forwards;
          animation: prev .5s forwards;
}
.mosowe-swiper .uni-swiper .item.swiper-next {
  -webkit-animation: next .5s forwards;
          animation: next .5s forwards;
}
.mosowe-swiper .uni-swiper .item.swiper-active {
  -webkit-animation: actives .5s forwards;
          animation: actives .5s forwards;
}
.mosowe-swiper .image {
  width: 100%;
  height: 100%;
}
.mosowe-swiper .text {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
  display: block;
}
.mosowe-swiper .imageTextLine {
  overflow: hidden;
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.mosowe-swiper .imageTextLine .avatar {
  -webkit-box-flex: 0;
  -webkit-flex: 0 0 50rpx;
          flex: 0 0 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
.mosowe-swiper .imageTextLine .content {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.mosowe-swiper .custom-indicator {
  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
  background: rgba(0, 0, 0, 0.2);
  width: 80rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #fff;
  border-radius: 30rpx;
  text-align: center;
}
@-webkit-keyframes prev {
0% {
    padding: 0;
}
100% {
    padding: 30rpx;
}
}
@keyframes prev {
0% {
    padding: 0;
}
100% {
    padding: 30rpx;
}
}
@-webkit-keyframes next {
0% {
    padding: 0;
}
100% {
    padding: 30rpx;
}
}
@keyframes next {
0% {
    padding: 0;
}
100% {
    padding: 30rpx;
}
}
@-webkit-keyframes actives {
0% {
    padding: 30rpx;
}
100% {
    padding: 0;
}
}
@keyframes actives {
0% {
    padding: 30rpx;
}
100% {
    padding: 0;
}
}

